<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Login">

    <ImageView
        android:layout_width="133dp"
        android:layout_height="128dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/studentLogin"
        android:layout_width="231dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgcolor1"
        android:fontFamily="serif"
        android:text="@string/Student"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/midle_horizontal"></Button>

    <Button
        android:id="@+id/directorLogin"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:background="@drawable/bgcolor1"
        android:fontFamily="serif"
        android:text="@string/Director"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/midle_vertial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentLogin" />

    <Button
        android:id="@+id/listeningTeamLogin"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bgcolor1"
        android:fontFamily="serif"
        android:text="@string/ListeningTeam"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/midle_vertial"
        app:layout_constraintTop_toBottomOf="@+id/studentLogin"></Button>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midle_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midle_vertial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>