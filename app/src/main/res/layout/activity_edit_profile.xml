<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/edit_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="26dp">
    <LinearLayout
        android:layout_below="@+id/appbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/deleg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delegate"
            android:fontFamily="serif"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/bg_add_post"
            android:layout_gravity="end"
            android:padding="10dp"
            android:textAlignment="center"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="22dp"
            android:background="@drawable/bg_profile_details"
            android:padding="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/first_name_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:fontFamily="serif"
                android:text="First Name"
                android:textColor="#fff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bgcolor1"
                android:layout_alignParentEnd="true"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="first name"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="22dp"
            android:background="@drawable/bg_profile_details"
            android:padding="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/family_name_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="serif"
                android:text="Family Name"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/family_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bgcolor1"
                android:paddingHorizontal="16dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="family name"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="22dp"
            android:background="@drawable/bg_profile_details"
            android:padding="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/card_number_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="serif"
                android:text="Card Number"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="0000000000"
                android:textColor="#fff"
                android:textSize="16sp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bgcolor1"/>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="22dp"
            android:background="@drawable/bg_profile_details"
            android:padding="10dp">

            <TextView
                android:id="@+id/speciality_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="serif"
                android:text="Speciality"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/speciality"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="speciality"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bgcolor1"
                android:paddingHorizontal="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_profile_details"
            android:padding="10dp">

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="serif"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="exemplex@gmail.com"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="8dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="serif"
                android:text="password"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_profile_details"
                android:paddingHorizontal="20dp"/>

            <Button
                android:id="@+id/getPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:text="get password"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_add_post"
                android:paddingHorizontal="12dp"
                android:visibility="visible"
                android:onClick="getPassword"/>

            <ImageButton
                android:id="@+id/copyPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:src="?attr/actionModeCopyDrawable"
                android:textColor="#fff"
                android:background="@drawable/bg_add_post"
                android:visibility="gone"
                android:onClick="copyPassword"/>
        </RelativeLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>