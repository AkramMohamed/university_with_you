<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:background="@drawable/bgcolor2">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingStart="6dp"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/close_btn"
        android:scaleType="centerCrop"
        android:src="@drawable/close2" />

    <TextView
        android:id="@+id/dirTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#75000000"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Director LogIn"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dirTitle"
        android:gravity="center"
        android:minWidth="300dp"
        android:minHeight="300dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/DirPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bginput"
            android:gravity="center"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textColor="#000000"
            android:textColorHint="#C3000000"
            android:textSize="20dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/directorLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_btn"
                android:backgroundTint="#E98E24AA"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="LogIn"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
